{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "C++ Build",
            "type": "shell",
            "command": "powershell.exe",
            "args": [
                "-NoProfile",
                "-ExecutionPolicy",
                "Bypass",
                "-Command",
                "$files = Get-ChildItem -Path '${workspaceFolder}\\src\\*.cpp' | % { $_.FullName };",
                "clang++ -stdlib=libc++ -std=c++17 -g -finput-charset=UTF-8 -fexec-charset=UTF-8 -I '${workspaceFolder}\\include' -L '${workspaceFolder}\\lib' $files -o '${workspaceFolder}\\build\\main.exe' -Wall"
            ],
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}"
            }
        }
    ]
}